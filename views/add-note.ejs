<div class="w-full flex items-center justify-center h-screen">
    <div class="w-[50%] border h-[70vh] p-5  rounded-md shadow-md relative overflow-y-auto overflow-x-hidden">
        <div class="flex items-center justify-start mb-3 bg-white p-3 gap-3">
            
            <div>
                <h1 class="text-base font-bold text-black">NoteApp <span class="block text-sm font-thin text-black">Create and save your note</span></h1>
            </div>
            
        </div>
        
        <div class="p-3">
            <form action="/note" method="POST">
                <div class="flex items-center w-full gap-2">
                    <div class="w-[400px]">
                        <label for="judul" class="text-sm font-medium text-black">Judul</label>
                        <div class="w-full flex flex-col mt-2">
                            <input type="text" id="judul" name="judul" class="bg-white py-2 px-2 text-sm font-medium text-slate-500 outline-none border-b shadow">
                        </div>
                    </div>
                    <div>
                        <label for="keterangan" class="text-sm font-medium text-black">Keterangan</label>
                        <div class="w-full flex flex-col mt-2">
                            <input type="text" id="keterangan" name="keterangan" class="bg-white py-2 px-2 text-sm font-medium text-slate-500 outline-none border-b shadow">
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <label for="text" class="text-sm font-medium text-black">Text</label>
                    <div class="w-full flex flex-col mt-2">
                        <textarea name="text" id="text" cols="30" rows="6" class="bg-white py-2 px-2 text-sm font-medium text-slate-500 outline-none border shadow"></textarea>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-2 w-full mt-3">
                    <a href="/" class="px-2 py-2 rounded-md text-black font-bold text-base transition-all">Back</a>
                    <button type="submit" class="bg-black px-5 py-2 rounded-md text-white font-bold text-base hover:opacity-50 transition-all">Save</button>
                </div>
            </form>
        </div>


